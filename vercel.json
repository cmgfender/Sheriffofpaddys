{
    "version": 2,
    "builds": [
      {
        "src": "pages/api/**/*.js",
        "use": "@vercel/node"
      },
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/pages/api/$1.js"
      },
      { "handle": "filesystem" },
      {
        "src": "/(.*)",
        "dest": "/public/index.html"
      }
    ]
  }